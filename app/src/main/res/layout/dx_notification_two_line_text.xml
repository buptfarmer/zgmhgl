<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyWidget.Notification.Body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/icon"
        style="@style/MyWidget.Notification.LeftArea.Icon" />
    <ImageView
        style="@style/MyWidget.Notification.Divider" />
    <LinearLayout
        style="@style/MyWidget.Notification.Area"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            style="@style/MyWidget.Notification.Text.Top" />
        <TextView
            android:id="@+id/message"
            style="@style/MyWidget.Notification.Text.Bottom" />
    </LinearLayout>
</LinearLayout>

